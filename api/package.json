{
  "name": "open-api-kundenbeziehung",
  "version": "1.0.0",
  "description": "Swiss National Standard for Customer Relationship API",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "validate-spec": "swagger-validator openapi.yaml",
    "generate-docs": "redoc-cli bundle openapi.yaml --output docs/index.html",
    "docker:build": "docker build -t open-api-kundenbeziehung .",
    "docker:run": "docker run -p 3000:3000 open-api-kundenbeziehung"
  },
  "keywords": [
    "open-banking",
    "swiss-finance",
    "customer-api",
    "fapi",
    "oauth2",
    "consent-management"
  ],
  "author": "Open Banking Project Switzerland",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-oauth2": "^1.7.0",
    "node-jose": "^2.2.0",
    "crypto": "^1.0.1",
    "uuid": "^9.0.1",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0",
    "mongoose": "^8.0.3",
    "redis": "^4.6.11",
    "qrcode": "^1.5.3",
    "node-fetch": "^3.3.2",
    "dotenv": "^16.3.1",
    "dpop": "^7.0.0",
    "pkce-challenge": "^4.1.0",
    "node-rsa": "^1.1.1",
    "jose": "^5.1.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "swagger-validator": "^1.0.6",
    "redoc-cli": "^0.13.21"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/openbankingproject-ch/open-api-kundenbeziehung.git"
  },
  "bugs": {
    "url": "https://github.com/openbankingproject-ch/open-api-kundenbeziehung/issues"
  },
  "homepage": "https://github.com/openbankingproject-ch/open-api-kundenbeziehung#readme"
}